@model GaragePRO.Models.WorkOrder

@{
    ViewBag.Title = "Work Orders";
    Layout = "_Layout";
}
<div class="card">
    <div class="card-header">
        <h4>New Work Order</h4>
        <form asp-action="Create" method="post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Work Order Start</label>
                    <input asp-for="DateIn" type="date" class="form-control"/>
                    <span asp-validation-for="DateIn" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label>Work Order Finish</label>
                    <input asp-for="DateOut" type="date" class="form-control"/>
                    <span asp-validation-for="DateOut" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Vehicle</label>
                    <select asp-for="VehicleId" class="form-control" id="vehicle-select" name="VehicleId"></select>
                    <span asp-validation-for="VehicleId" class="text-danger"></span>

                </div>
                <div class="col-md-6">
                    <label>Mechanic</label>
                    <select asp-for="MechanicId" class="form-control" id="mechanic-select" name="MechanicId"></select>
                    <span asp-validation-for="MechanicId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Notes</label>
                    <input asp-for="Notes" class="form-control"/>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label>Order status</label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<WorkOrderStatus>()"
                            class="form-control"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-outline-primary w-25">Create</button>
                <a class="btn btn-outline-dark w-25" asp-action="Index" asp-controller="WorkOrder">Cancel</a>
            </div>
        </form>

        @section Scripts {
            <partial name="_ValidationScriptsPartial"/>
        }
    </div>
</div>