@model GaragePRO.Models.Mechanic

@{
    ViewBag.Title = "Mechanic Details";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>Mechanic Details</h4>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <p class="card-text">
            <h5 class="card-title">@Model.FullName</h5>
            <strong>Seniority:</strong> @Model.Seniority
            <br>
            <strong>Start of employment:</strong> @Model.EmploymentStartYear
            <br>
            <strong>Status:</strong>@Model.Status
            <br>
            <strong>Phone:</strong> @Model.Phone
        </p>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5>Vehicles</h5>
</div>

@if (Model.WorkOrders.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Vehicle</th>
            <th>Mechanic</th>
            <th>DateIn</th>
            <th>DateOut</th>
            <th>Notes</th>
            <th>Created at</th>
            <th>Service Details</th>
            <th>Parts Used</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var workOrder in Model.WorkOrders)
        {
            <tr>
                <td>
                    <a asp-controller="Vehicle" asp-action="Details" asp-route-id="@workOrder.Vehicle.Id">
                        @workOrder.Vehicle.Make @workOrder.Vehicle.Model
                    </a>
                </td>

                <td>@workOrder.Mechanic.FullName</td>
                <td>@workOrder.DateIn</td>
                <td>@workOrder.DateOut</td>
                <td>@workOrder.Notes</td>
                <td>@workOrder.CreatedAt</td>
                <td>@workOrder.ServiceDetails</td>
                <td>@workOrder.PartsUsed</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-controller="WorkOrder" asp-action="Edit"
                       asp-route-id="@workOrder.Id">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No vehicles found for this mechanic.</div>
}