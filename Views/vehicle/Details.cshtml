@model GaragePRO.Models.Vehicle

@{
    ViewBag.Title = "Vehicle Details";
    Layout = "_Layout";
}
<div class="row my-3">
<div class="col-md-12">
    <div class="d-flex align-items-center gap-3 mb-2">
        <h4 class="mb-0">Vehicle Details</h4>
        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
        <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
    </div>

</div>
</div>


<table class="table table-bordered mt-3">
    <tr>
        <th>Make</th>
        <td>@Model.Make</td>
    </tr>
    <tr>
        <th>Model</th>
        <td>@Model.Model</td>
    </tr>
    <tr>
        <th>Year</th>
        <td>@Model.Year</td>
    </tr>
    <tr>
        <th>VIN</th>
        <td>@Model.VIN</td>
    </tr>
    <tr>
        <th>Mileage</th>
        <td>@Model.Mileage</td>
    </tr>
</table>



