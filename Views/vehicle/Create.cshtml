@model GaragePRO.Models.Vehicle

@{
    ViewBag.Title = "Add Vehicle";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <h4>Add New Vehicle</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="CustomerId" value="@ViewBag.CustomerId"/>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Make" class="form-label"></label>
                    <input asp-for="Make" class="form-control"/>
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control"/>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control"/>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="VIN" class="form-label"></label>
                    <input asp-for="VIN" class="form-control"/>
                    <span asp-validation-for="VIN" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Mileage" class="form-label"></label>
                    <input asp-for="Mileage" class="form-control"/>
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-outline-primary w-25">Create</button>
                <a asp-controller="Customer" asp-action="Details" asp-route-id="@Model.CustomerId"
                   class="btn btn-outline-secondary w-25">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}