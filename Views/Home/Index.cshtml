@using GaragePRO.Models

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">

    <div class="row justify-content-center">
        <div class="col-md-2 mb-4">
            <div class="card text-white bg-warning shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-tools me-2"></i>Pending Work Orders</h5>
                    <p class="card-text fs-3">@ViewBag.PendingWorkOrders</p>
                    <a asp-controller="WorkOrder" asp-action="Index" class="text-white stretched-link">View All</a>
                </div>
            </div>
        </div>
        <div class="col-md-2 mb-4">
            <div class="card text-white bg-danger shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-cash-stack me-2"></i>Unpaid Invoices</h5>
                    <p class="card-text fs-3">@ViewBag.UnpaidInvoices</p>
                    <a asp-controller="Invoice" asp-action="Index" class="text-white stretched-link">View All</a>
                </div>
            </div>
        </div>
        <div class="col-md-2 mb-4">
            <div class="card text-white bg-info shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people-fill me-2"></i>Total Customers</h5>
                    <p class="card-text fs-3">@ViewBag.TotalCustomers</p>
                    <a asp-controller="Customer" asp-action="Index" class="text-white stretched-link">View All</a>
                </div>
            </div>
        </div>
        <div class="col-md-2 mb-4">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-gear me-2"></i>Total Mechanics</h5>
                    <p class="card-text fs-3">@ViewBag.TotalMechanics</p>
                    <a asp-controller="Mechanic" asp-action="Index" class="text-white stretched-link">View All</a>
                </div>
            </div>
        </div>
        <div class="col-md-2 mb-4">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-car-front-fill me-2"></i>Total Vehicles</h5>
                    <p class="card-text fs-3">@ViewBag.TotalVehicles</p>
  
                </div>
            </div>
        </div>
    </div>

</div>