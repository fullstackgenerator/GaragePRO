@model GaragePRO.Models.Customer

@{
    ViewBag.Title = "Customer Details";
    Layout = "_Layout";
}
<div class="card">
    <div class="card-header">
        <h4>Edit Customer Details</h4>


        <form asp-action="Edit" method="post" class="mt-4">
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-text">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <input asp-for="FullName" class="form-control" placeholder="Full Name"/>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="Address" class="form-control" placeholder="Address"/>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <input asp-for="City" class="form-control" placeholder="City"/>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="PostalCode" class="form-control" placeholder="Postal Code"/>
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <input asp-for="Phone" class="form-control" placeholder="Phone"/>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <input asp-for="Email" class="form-control" placeholder="Email"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Confirm edit</button>
                    <a class="btn btn-outline-dark" asp-action="Details" asp-controller="Customer"
                       asp-route-id="@Model.Id">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>