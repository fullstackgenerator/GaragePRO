@model IEnumerable<GaragePRO.Models.Customer>

@{
    ViewBag.Title = "Customer Details";
    Layout = "_Layout";
}

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
    <tr>
        <th>Full Name</th>
        <th>Address</th>
        <th>City</th>
        <th>Postal Code</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Vehicles</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.FullName</td>
            <td>@customer.Address</td>
            <td>@customer.City</td>
            <td>@customer.PostalCode</td>
            <td>@customer.Phone</td>
            <td>@customer.Email</td>
            <td>@customer.Vehicles</td>
            <td>
                <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
