@model IEnumerable<GaragePRO.Models.Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Customers</h2>
    <a class="btn btn-success" asp-action="Create">+ Add New Customer</a>
</div>

<table class="table table-hover table-hover shadow-sm">
    <thead class="table-light">
    <tr>
        <th>Full Name</th>
        <th>Postal Code</th>
        <th>City</th>
        <th style="width: 180px;">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.FullName</td>
            <td>@customer.PostalCode</td>
            <td>@customer.City</td>
            <td>
                <a class="btn btn-primary btn-sm me-1" asp-action="Details" asp-route-id="@customer.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>