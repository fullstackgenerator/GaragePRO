@model GaragePRO.Models.ServiceDetail

@{
    ViewBag.Title = "Service Details";
    Layout = "_Layout";
}
<div class="card">
    <div class="card-header">
        <h4>Create Service Detail</h4>
        <form asp-action="Create" method="post" class="mt-4">
            <input type="hidden" asp-for="WorkOrderId"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-text">

                    <div class="form-group">
                        <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group my-2">
                        <label asp-for="LaborHours">Labor Hours</label>
                        <input asp-for="LaborHours" class="form-control"/>
                        <span asp-validation-for="LaborHours" class="text-danger"></span>
                    </div>

                    <div class="form-group my-2">
                        <label asp-for="HourlyRate">Hourly Rate</label>
                        <input asp-for="HourlyRate" class="form-control"/>
                        <span asp-validation-for="HourlyRate" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-outline-primary">Create</button>
                        <a class="btn btn-outline-dark" asp-action="Details" asp-controller="WorkOrder"
                           asp-route-id="@Model.WorkOrderId">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>