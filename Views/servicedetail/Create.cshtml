@model GaragePRO.Models.ServiceDetail

@{
    ViewBag.Title = "Service Details";
    Layout = "_Layout";
}

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="WorkOrderId" />

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LaborHours"></label>
        <input asp-for="LaborHours" class="form-control" />
        <span asp-validation-for="LaborHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HourlyRate"></label>
        <input asp-for="HourlyRate" class="form-control" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>