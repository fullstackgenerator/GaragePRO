@model IEnumerable<GaragePRO.Models.Invoice>

@{
    ViewBag.Title = "Invoices";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>Invoices</h4>
    <a class="btn btn-success" asp-action="Create">+ Add New Invoice</a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
    <tr>
        <th>Invoice Number</th>
        <th>Work Order ID</th>
        <th>Customer</th>
        <th>Vehicle</th>
        <th>Date Issued</th>
        <th>Amount</th>
        <th>Status</th>
        <th style="width: 180px;">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var invoice in Model)
    {
        <tr>
            <td>@invoice.InvoiceNumber</td>
            <td>@invoice.WorkOrderId</td>
            <td>@invoice.WorkOrder?.Vehicle?.Customer?.FullName</td>
            <td>@invoice.WorkOrder?.Vehicle?.Make @invoice.WorkOrder?.Vehicle?.Model</td>
            <td>@invoice.DateIssued.ToString("dd.MM.yyyy")</td>
            <td>@(invoice.Total.ToString("N2", new System.Globalization.CultureInfo("sl-SI"))) €</td>
            <td>@invoice.Status</td>

            <td>
                <a class="btn btn-primary btn-sm me-1" asp-action="Details" asp-route-id="@invoice.Id">Details</a>
                <form asp-controller="Invoice" asp-action="DeleteConfirmed" asp-route-id="@invoice.Id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    @Html.AntiForgeryToken()
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>