@model GaragePRO.Models.Invoice

@{
    ViewBag.Title = "Invoice Details";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>Invoice Details</h4>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Invoice/Work Order #@Model.WorkOrderId</h5>
        <p class="card-text">
            <strong>Customer:</strong> @Model.WorkOrder.Vehicle.Customer.FullName<br/>
            <strong>Address:</strong> @Model.WorkOrder.Vehicle.Customer.Address, @Model.WorkOrder.Vehicle.Customer.PostalCode, @Model.WorkOrder.Vehicle.Customer.City<br/>
            <strong>Vehicle Make and Model:</strong> @Model.WorkOrder.Vehicle.Make | @Model.WorkOrder.Vehicle.Model<br/>
            <strong>VIN:</strong> @Model.WorkOrder.Vehicle.VIN<br/>
            <strong>Sub Total:</strong> @(Model.SubTotal) €<br/>
            <strong>VAT Amount:</strong> @Model.TaxAmount €<br/>
            <strong>Total:</strong> @Model.Total €<br/>
            <strong>Payment Type:</strong> @Model.PaymentType<br/>
            <strong>Date Issued:</strong> @Model.DateIssued.ToString("dd.MM.yyyy")
        </p>
    </div>
</div>

