@model GaragePRO.Models.PartUsed

@{
    ViewBag.Title = "Parts Used";
    Layout = "_Layout";
}
<div class="card">
    <div class="card-header">
        <h4>Add Part</h4>
        <form asp-action="Create">
            <input type="hidden" asp-for="WorkOrderId"/>
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-text">

                    <div class="form-group my-2">
                        <label asp-for="PartCatalogId">Part Catalog</label>
                        <select asp-for="PartCatalogId" asp-items="ViewBag.PartCatalogs" class="form-control">
                            <option value="">-- Select Part --</option>
                        </select>
                    </div>

                    <div class="form-group my-2">
                        <label asp-for="Quantity"></label>
                        <input asp-for="Quantity" class="form-control"/>
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-outline-primary w-25">Add Part</button>
                    <a class="btn btn-outline-dark w-25" asp-action="Details" asp-controller="WorkOrder"
                       asp-route-id="@Model.WorkOrderId">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>